<%= form_with(model: task, class: "task-form") do |form| %>
  <% if task.errors.any? %>
    <div class="form-errors">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", placeholder: "Enter task title...", autofocus: true %>
  </div>

  <div class="form-group form-check">
    <%= form.check_box :completed, class: "form-check-input" %>
    <%= form.label :completed, "Mark as completed", class: "form-check-label" %>
  </div>

  <div class="form-actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>

