<div class="task-show">
  <div class="task-show-header">
    <h1><%= @task.title %></h1>
    <span class="status-badge <%= @task.completed? ? 'badge-completed' : 'badge-active' %>">
      <%= task_status_text(@task) %>
    </span>
  </div>

  <div class="task-details">
    <div class="detail-row">
      <strong>Status:</strong>
      <span><%= task_status_text(@task) %></span>
    </div>
    <div class="detail-row">
      <strong>Created:</strong>
      <span><%= @task.created_at.strftime("%B %d, %Y at %I:%M %p") %></span>
    </div>
    <div class="detail-row">
      <strong>Last Updated:</strong>
      <span><%= @task.updated_at.strftime("%B %d, %Y at %I:%M %p") %></span>
    </div>
  </div>

  <div class="task-show-actions">
    <%= button_to toggle_button_text(@task), toggle_task_path(@task), method: :patch, class: "btn btn-toggle" %>
    <%= link_to "Edit", edit_task_path(@task), class: "btn btn-secondary" %>
    <%= button_to "Delete", task_path(@task), method: :delete, class: "btn btn-danger", data: { turbo_confirm: "Are you sure you want to delete this task?" } %>
    <%= link_to "Back to Tasks", tasks_path, class: "btn btn-outline" %>
  </div>
</div>

